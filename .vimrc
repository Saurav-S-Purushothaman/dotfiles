set number
syntax on
set mouse=a

set tabstop=4
set shiftwidth=4

" Space instead of tab
set expandtab

filetype plugin indent on
set smartindent

" Show the search match as I type
set incsearch
set hlsearch
" Ignore case while searching
set ignorecase
set smartcase

" System clipboad
set clipboard=unnamedplus
set termguicolors
